<h1 class="my-4">Dog Listings</h1>

<div class='table-responsive'>
  <table class="table table-striped table-hover">
    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Breed</th>
        <th>Weight</th>
        <th>Price</th>
        <th>Seller email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @dog_listings.each do |dog_listing| %>
        <tr>
          <td><%= dog_listing.name %></td>
          <td><%= dog_listing.breed %></td>
          <td><%= dog_listing.weight %> lbs</td>
          <td><%= number_to_currency(dog_listing.price) %></td>
          <td><%= link_to dog_listing.seller_email, "mailto:#{dog_listing.seller_email}" %></td>

          <td><%= link_to 'Show', dog_listing_path(dog_listing), class: 'btn btn-sm btn-primary' %></td>
          <td><%= link_to 'Edit', edit_dog_listing_path(dog_listing), class: 'btn btn-sm btn-primary' %></td>
          <td><%= button_to 'Destroy', dog_listing_path(dog_listing), method: :delete, data: { turbo: false }, form: { data: { turbo_confirm: 'Are you sure?' } }, class: 'btn btn-sm btn-primary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Dog Listing', new_dog_listing_path, class: 'btn btn-primary' %>

